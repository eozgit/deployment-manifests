# filepath: .env
# --- MTD-ITSA Compliance Stack Environment Variables ---
# These variables are read by Docker Compose and injected into containers.

# 1. Database Connection String (Overrides appsettings.json)
# Using '__' maps directly to 'ConnectionStrings:DefaultConnection' in .NET.
# You must set this value to point to the 'sqlserver' container name.
SQL_SA_PASSWORD="55555Percent"
ConnectionStrings__DefaultConnection="Server=sqlserver,1433;Database=itsa_db;User Id=SA;Password=${SQL_SA_PASSWORD};TrustServerCertificate=True"

# 2. Application Secrets
API_KEY="SecureKeyForInternalAPI"

# 3. Frontend Configuration
APP_TITLE="MTD-ITSA Compliance Dashboard"

ANGULAR_REPO_URL=https://github.com/eozgit/mtd-itsa-compliance-fe.git
ANGULAR_REPO_BRANCH=main

DOTNET_REPO_URL=https://github.com/eozgit/mtd-itsa-compliance-api.git
DOTNET_REPO_BRANCH=main
